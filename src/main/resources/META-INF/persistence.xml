<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.1">
  <persistence-unit name="demoPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>ru.cource.inno.java_pro.hw5_persistence.Author</class>
    <class>ru.cource.inno.java_pro.hw5_persistence.Article</class>

    <properties>
      <!-- JDBC -->
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5433/persistence"/>
      <property name="jakarta.persistence.jdbc.user" value="admin"/>
      <property name="jakarta.persistence.jdbc.password" value="admin"/>

      <!-- Auto schema generation: drop-and-create (as required) -->
      <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>

      <!-- Hibernate tuning & SQL logging -->
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.highlight_sql" value="true"/>
      <property name="hibernate.show_sql" value="false"/>
      <property name="hibernate.jdbc.time_zone" value="UTC"/>

      <!-- Dialect -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
    </properties>
  </persistence-unit>
</persistence>
